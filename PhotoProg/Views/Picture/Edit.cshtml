@model Picture
@{
    ViewData["Title"] = "Edit";
}
<h1>Edit</h1>

<h4>Picture</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div class="col-md-4">
                <img class="img-thumbnail" width="100" id="Kep" src="~/img/@Model.FileName" />
            </div>

            <input type="hidden" asp-for="PictureID" />
            <div class="form-group">
                <label asp-for="FileName" class="control-label"></label>
                <input asp-for="FileName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="PictureName" class="control-label"></label>
                <input asp-for="PictureName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="When" class="control-label"></label>
                <input asp-for="When" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
