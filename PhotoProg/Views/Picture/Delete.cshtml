@model Picture
@{
    ViewData["title"] = "Delete Picture";
}

<h1>Delete</h1>
<h2>Are you sure that you want to delete this item?</h2>
<h3>@Model.PictureName</h3>
<hr />

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="PictureID"/>
    <dl class="row"></dl>
    <dd class="col-sm-10">
        <img src="~/img/@Model.FileName" class="img-thumbnail" width="100"/>
    </dd>
    <button type="submit" class="btn btn-primary">Delete</button>
    <a asp-action="Index">Back</a>
</form>